<?xml version='1.0' encoding='utf-8'?>
<widget id="edu.cornell.stepstep" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="Pedometer">
        <param name="android-package" value="edu.cornell.stepometer.Stepometer" />
    </feature>
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
    </feature>
    <name>StepStep</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="SplashScreenDelay" value="10000" />
    <gap:plugin name="org.apache.cordova.splashscreen" />
    <gap:splash gap:platform="ios" height="1136" src="Default@2x~iphone.png" width="640" />
    <gap:splash gap:platform="ios" height="2208" src="Default@3x~iphone.png" width="1242" />
    <preference name="DisallowOverscroll" value="true" />
</widget>
