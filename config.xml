<?xml version='1.0' encoding='utf-8'?>
<widget id="edu.cornell.stepstep" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>StepStep</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    
    <!-- Do not auto hide splash on iOS -->
    <preference name="AutoHideSplashScreen" value="false" />
    
    <gap:plugin name="org.apache.cordova.splashscreen" />
    
    <gap:splash src="res/screen/ios/screen-iphone-portrait-667h@2x.png" gap:platform="ios" width="750"  height="1334" />
    <gap:splash src="www/css/images/Background.png" gap:platform="ios" width="1242" height="2208" />
    <preference name="DisallowOverscroll" value="true" />
    
</widget>
